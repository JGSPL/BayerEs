<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.qa.view.QnADirectActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:visibility="visible"
        app:elevation="0dp">


        <!-- <androidx.appcompat.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="?attr/actionBarSize"
             android:background="@android:color/transparent"
             android:minHeight="?attr/actionBarSize"
             >-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left|center"
                android:contentDescription=" "
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:src="@mipmap/ic_back" />

            <com.procialize.bayer2020.fonts.RobotoTextview
                android:id="@+id/tv_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left|center"
                android:text="Ask Question"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:visibility="visible" />


            <ImageView
                android:id="@+id/headerlogoIv"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription=" "
                android:visibility="gone" />
        </LinearLayout>
        <!-- </androidx.appcompat.widget.Toolbar>-->


    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_ask_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_ask_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_submit"
            android:gravity="center"
            android:padding="10dp"
            android:text="Ask Question"
            android:textColor="@color/white"
            android:textSize="15dp"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_asked_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Asked Questions"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/question_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_qna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="true"
            tools:listitem="@layout/recycler_item_spot_qna" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</LinearLayout>