<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <com.procialize.eventapp.fonts.RobotoTextViewHeader
            android:id="@+id/tv_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"
            android:text="08:00 AM"
            android:textSize="14dp"
            android:textStyle="bold" />

        <com.procialize.eventapp.fonts.RobotoTextview
            android:id="@+id/tv_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|left"
            android:text="09:15 AM"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.procialize.eventapp.fonts.RobotoTextViewHeader
            android:id="@+id/tv_session_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Registartion of delegates"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold" />

        <com.procialize.eventapp.fonts.RobotoTextview
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text=""
            android:textSize="14dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_next_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_right_arrow" />

</LinearLayout>