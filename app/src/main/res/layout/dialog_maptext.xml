<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/trans"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="match_parent">

        <com.procialize.bayer2020.fonts.RobotoTextViewHeader
            android:id="@+id/tvCompanyName"
            android:gravity="left"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textsizenormal"
            android:textColor="@color/black"
            android:text=""
            android:paddingLeft="5dp"
            android:layout_width="0dp"
            android:layout_weight="9.5"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:id="@+id/ivClose"
            android:src="@drawable/ic_cross"></ImageView>
    </LinearLayout>

        <View
            android:background="@color/linecolor"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="0.5dp"/>

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/tvMobile"
            android:gravity="left"
            android:padding="@dimen/padding"
            android:autoLink="phone"
            android:textSize="@dimen/textsizenormal"
            android:textColor="@color/black"
            android:text=""
            android:paddingLeft="5dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/tvAddress"
            android:gravity="left"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textsizenormal"
            android:autoLink="all"
            android:textColor="@color/black"
            android:text=""
            android:paddingLeft="5dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/tvcallnow"
            android:gravity="left"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textsizenormal"
            android:textColor="@color/black"
            android:text="Call Now"
            android:paddingLeft="5dp"
            android:autoLink="phone"

            android:drawableLeft="@drawable/call_icon"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/tvmessageWh"
            android:gravity="left"
            android:padding="@dimen/padding"
            android:textSize="@dimen/textsizenormal"
            android:textColor="@color/black"
            android:text="Message on WhatsApp"
            android:paddingLeft="5dp"
            android:drawableLeft="@drawable/whatsup"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>





    </LinearLayout>

</androidx.cardview.widget.CardView>
