<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="10"
    android:id="@+id/linMain"
    android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_back"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:elevation="0dp">

            <ImageView
                android:id="@+id/headerlogoIv"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription=" " />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/notificationlogoIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_notification" />

                <LinearLayout
                    android:id="@+id/ll_notification_count"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/count_circle"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_notification"
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:gravity="top|center"
                        android:text="50"
                        android:textColor="@color/colorwhite"
                        android:textSize="8dp" />
                </LinearLayout>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productTitle"
        android:textSize="16sp"
        android:padding="5dp"
        android:textColor="@color/black">
    </com.procialize.bayer2020.fonts.RobotoTextview>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/gallery_placeholder"
        android:id="@+id/imgCover"
        ></ImageView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/linBuyNow"
            android:layout_gravity="center"
            android:background="@color/colorwhite"
            android:layout_weight="1">
        <com.procialize.bayer2020.fonts.RobotoButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:textSize="8sp"
            android:stateListAnimator="@null"

            android:drawablePadding="5dp"
            android:background="@color/colorwhite"
            android:drawableTop="@drawable/ic_livepoll"
            android:text="Buy Now"
            ></com.procialize.bayer2020.fonts.RobotoButton>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/linCalc"
            android:layout_gravity="center"
            android:background="@color/colorwhite"
            android:layout_weight="1">
            <com.procialize.bayer2020.fonts.RobotoButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
            android:textSize="8sp"
            android:drawablePadding="5dp"
            android:background="@color/colorwhite"
            android:layout_margin="5dp"
                android:stateListAnimator="@null"
            android:id="@+id/imgCalc"
            android:drawableTop="@drawable/ic_dosage"
            android:text="Dosage Calculator"
            android:textAllCaps="false"
            ></com.procialize.bayer2020.fonts.RobotoButton>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:id="@+id/linShare"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/colorwhite"
            android:layout_weight="1">
            <com.procialize.bayer2020.fonts.RobotoButton
                android:layout_width="match_parent"
                android:layout_height="50dp"
            android:textAllCaps="false"
            android:textSize="8sp"
            android:background="@color/colorwhite"
            android:layout_margin="5dp"
            android:stateListAnimator="@null"

            android:drawablePadding="5dp"
            android:drawableTop="@drawable/ic_share"
            android:text="Share"
            ></com.procialize.bayer2020.fonts.RobotoButton>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

    <androidx.fragment.app.FragmentTabHost
        android:id="@android:id/tabhost"
        style="@style/MyCustomTabText"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0"/>

            <FrameLayout
                android:id="@+id/realtabcontent"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>
    </androidx.fragment.app.FragmentTabHost>


</LinearLayout>
