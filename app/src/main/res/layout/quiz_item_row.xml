<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quiz_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="left|center"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:id="@+id/rl_bg_image"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/layoutTop"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@android:color/transparent"/>

        <RelativeLayout
            android:id="@+id/layoutBottom"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@id/layoutTop"
            android:background="@color/colorwhite">

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/layoutBottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-40dp"
            android:adjustViewBounds="true">

            <ImageView
                android:id="@+id/profileIV"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerInParent="true"
                android:contentDescription="TODO"
                android:src="@drawable/quizlogo" />

            <ProgressBar
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:id="@+id/progressBar"/>

        </RelativeLayout>
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/linQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorwhite"
        android:baselineAligned="false"
        android:gravity="left|center"
        android:minHeight="90dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="left|center"
            android:orientation="vertical">

            <!-- Video Title -->
            <TextView
                android:id="@+id/quiz_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Quiz"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--
                        <com.procialize.mrgeApp20.Fonts.RobotoTextViewHeader
                            android:id="@+id/video_title_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"  />
            -->

            <TextView
                android:id="@+id/quiz_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:textSize="10sp"
                android:textColor="@color/txtcolor"/>

        </LinearLayout>

        <!--
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center">
                    <ProgressBar
                        android:id="@+id/progressBarCircle"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/drawable_circle_dark_blue"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/drawable_circle_yellow"
                        android:rotation="-90" />
                    <TextView
                        android:id="@+id/textViewTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="10"
                        android:textColor="@color/activetab"
                        android:textSize="12dp" />

        &lt;!&ndash;
                    <com.procialize.mrgeApp20.CustomTools.CircleDisplay
                        android:id="@+id/progressbar"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"/>
        &ndash;&gt;
                </LinearLayout>
        -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progressBarCircle"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:background="@drawable/quiz_pro"
                android:indeterminate="false"
                android:progressDrawable="@drawable/quiz_pro1"
                android:rotation="-90" />


            <!--  android:max="10"
              android:progress="10"-->
            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0/0"
                android:textColor="@color/activetab"
                android:textSize="12dp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rightarrow"
                android:contentDescription="TODO"
                android:tint="@color/colorAccent"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>