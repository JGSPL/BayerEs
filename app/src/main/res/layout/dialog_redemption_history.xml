<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:background="@color/blue"
    android:id="@+id/linBorder"
    android:gravity="center"
    android:weightSum="10"
    android:layout_height="wrap_content">
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Redemption history"
        android:textColor="@color/colorwhite" />

    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:id="@+id/imgClose"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:tint="@color/colorwhite"
        android:src="@drawable/ic_close">

    </ImageView>
</LinearLayout>
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:id="@+id/txt_Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:layout_below="@+id/linBorder"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:id="@+id/txt_Data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left"
        android:singleLine="false"
        android:layout_below="@+id/txt_Data"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:id="@+id/txt_Data2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left"
        android:singleLine="false"
        android:layout_below="@+id/txt_Data1"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:id="@+id/txt_Data3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left"
        android:singleLine="false"
        android:layout_below="@+id/txt_Data2"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/black" />

<View
    android:layout_width="wrap_content"
    android:layout_height="0.5dp"
    android:id="@+id/viewOne"
    android:layout_margin="5dp"
    android:layout_below="@+id/txt_Data3"
    android:background="@color/black">

</View>
    <com.procialize.bayer2020.fonts.RobotoTextview
        android:id="@+id/txt_Data4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left"
        android:layout_below="@+id/viewOne"
        android:textStyle="bold"
        android:text="Status"
        android:textSize="16dp"
        android:textColor="@color/black" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_mpoinStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_Data4">

    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>