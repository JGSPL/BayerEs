<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|top"
    android:background="@android:color/transparent"
    android:gravity="top"
    android:id="@+id/ll_main"
    android:orientation="vertical"
    android:layout_marginBottom="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/diatitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.procialize.eventapp.fonts.RobotoTextview
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.5"
                android:paddingLeft="10dp"
                android:text="Preview"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizenormal"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_gravity="right|center"
                android:layout_weight="1.5"
                android:tint="@color/black"
                android:contentDescription="TODO"
                android:src="@drawable/ic_close"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:gravity="center"
            android:weightSum="10"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:gravity="center"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:orientation="vertical">
            <com.procialize.eventapp.costumTools.TouchImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                />

            <cn.jzvd.JzvdStd
                android:id="@+id/videoplayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:screenOrientation="portrait">

            </cn.jzvd.JzvdStd>
                <ProgressBar
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"
                    android:progressTint="@color/white"
                    android:id="@+id/progessLoad"
                    android:layout_centerInParent="true">

                </ProgressBar>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="right"
                android:weightSum="0">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:id="@+id/linSend"
                    android:background="@color/activetab"
                    android:padding="10dp">
                <ImageView
                    android:id="@+id/chatSendButton"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="5dp"

                    android:layout_gravity="center"
                    android:tint="@color/black"
                    android:src="@mipmap/ic_send"
                    />
            </LinearLayout>

<!--
                <com.procialize.eventapp.fonts.RobotoButton
                    android:id="@+id/ratebtn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="2"
                    android:background="@drawable/background_login"
                    android:text="Send"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
-->

                <com.procialize.eventapp.fonts.RobotoButton
                    android:id="@+id/canclebtn"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"

                    android:layout_margin="5dp"

                    android:background="@drawable/background_login"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>