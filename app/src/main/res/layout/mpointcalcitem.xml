<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorwhite"
        android:orientation="horizontal">

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/txt_product"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/fontcolo" />

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/txt_packsize"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/fontcolo" />

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/mpointspermpin"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="3"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/fontcolo" />

        <com.procialize.bayer2020.fonts.RobotoEditext
            android:id="@+id/txt_noofmpin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:hint="Enter"
            android:textSize="12sp"
            android:padding="2dp"
            android:background="#ebedec"
            android:gravity="center"
            android:textColor="@color/fontcolo"
            android:inputType="numberDecimal"
            android:maxLength="10"/>

        <com.procialize.bayer2020.fonts.RobotoTextview
            android:id="@+id/txt_total"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="3"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="@color/fontcolo" />

    </LinearLayout>

</LinearLayout>