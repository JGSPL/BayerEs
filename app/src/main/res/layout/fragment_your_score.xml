<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/relativeMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.procialize.eventapp.fonts.RobotoTextview
                    android:id="@+id/questionTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingBottom="5dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:text="Score"
                        android:textSize="14dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <ProgressBar
                            android:id="@+id/progressBarCircle"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/quiz_pro"
                            android:indeterminate="false"
                            android:progressDrawable="@drawable/quiz_pro1"
                            android:rotation="-90" />


                        <!--  android:max="10"
                          android:progress="10"-->
                        <TextView
                            android:id="@+id/txt_count"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="35dp"
                            android:gravity="center"
                            android:text="4/4"
                            android:textColor="@color/activetab"
                            android:textSize="40sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="I'm hosting a quiz show,\nbut I never considered myself\na game show host."
                        android:textColor="@color/textcolorLight"
                        android:textSize="14dp"
                        android:visibility="gone" />


                    <com.procialize.eventapp.fonts.RobotoButton
                        android:id="@+id/btn_ok"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="OK"
                        android:textColor="@color/colorwhite"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/viewResult"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="3sp"
                android:layout_marginBottom="5dp"
                android:layout_weight="5"
                android:gravity="center"
                android:text="View Result"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizesmall" />


            <com.procialize.eventapp.fonts.RobotoButton
                android:id="@+id/txt_title"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="5"
                android:text="Next Quiz"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="@dimen/textsizesmall"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>