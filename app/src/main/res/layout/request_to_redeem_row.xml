<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
     android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/linear1"
        android:weightSum="10"
        android:background="@drawable/reward_back"
        android:orientation="horizontal"
        android:paddingBottom="0dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_reward"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"

            android:src="@drawable/gallery_placeholder"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <com.procialize.bayer2020.fonts.RobotoTextViewHeader
                android:id="@+id/txt_rewardname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:weightSum="10"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp"
                    android:gravity="top"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4">
            <com.procialize.bayer2020.fonts.RobotoTextview
                android:id="@+id/txt_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textColor="@color/black"
                android:textSize="12sp" />
                </LinearLayout>

            <TextView
                android:id="@+id/txt_needed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="gone" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|top"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="6">
            <Button
                android:id="@+id/btn_reedemnot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/profile_edit_text_bg"
                android:gravity="center"
                android:singleLine="false"
                android:layout_gravity="center"
                android:padding="5dp"
                android:enabled="false"
                android:text="Request to Redeem"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible" />
            <Button
                android:id="@+id/btn_reedem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:minHeight="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/btn_submit"
                android:gravity="center"
                android:singleLine="false"

                android:layout_gravity="center"
                android:padding="5dp"
                android:text="Request to Redeem"
                android:textAllCaps="false"
                android:textColor="@color/colorwhite"
                android:textSize="12sp"
                android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>